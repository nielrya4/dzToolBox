error_page 502 = @fallback;

server {
    listen 443 ssl; # managed by Certbot
    server_name dztoolbox.eoas.ubc.ca www.dztoolbox.com;

    location / {
        include uwsgi_params;
        uwsgi_read_timeout 300s;  # Adjusted uwsgi timeout
        uwsgi_connect_timeout 75s;
        uwsgi_pass unix:/home/webadmin/dztoolbox/dztoolbox.sock;
    }

    location @fallback {
        include uwsgi_params;
        uwsgi_read_timeout 300s;
        uwsgi_connect_timeout 75s;
        uwsgi_pass unix:/home/webadmin/dztoolbox/dztoolbox.sock;  # Same uWSGI pass here
    }

    ssl_certificate /etc/letsencrypt/live/dztoolbox.eoas.ubc.ca/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dztoolbox.eoas.ubc.ca/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = www.dztoolbox.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = dztoolbox.eoas.ubc.ca) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name dztoolbox.eoas.ubc.ca www.dztoolbox.com;
    return 404; # managed by Certbot
}
